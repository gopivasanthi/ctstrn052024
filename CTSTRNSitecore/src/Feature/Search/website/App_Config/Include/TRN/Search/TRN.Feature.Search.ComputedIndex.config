<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
	<sitecore role:require="Standalone or ContentManagement or ContentDelivery or XMCloud">
		<contentSearch>
			<indexConfigurations>
				<defaultSolrIndexConfiguration>
					<documentOptions>
						<fields hint="raw:AddComputedIndexField">
							<field fieldName="trnarticleurl">TRN.Feature.Search.ComputedIndex.ArticleUrl, TRN.Feature.Search</field>
							<field fieldName="trnarticleimageurl">TRN.Feature.Search.ComputedIndex.ArticleImageUrl, TRN.Feature.Search</field>
							<field fieldName="trntitlebackgroundurl">TRN.Feature.Search.ComputedIndex.TitleBackgroundUrl, TRN.Feature.Search</field>
						</fields>
					</documentOptions>
				</defaultSolrIndexConfiguration>
			</indexConfigurations>
		</contentSearch>
	</sitecore>
</configuration>