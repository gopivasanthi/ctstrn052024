@model TRN.Foundation.Navigation.Models.NavigationMenu
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Model.HomePage.NavgiationItemUrl">@Model.HomePage.NavigationItemName</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @foreach (var nav in Model.MainNavigation)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" aria-current="page" role="button" data-bs-toggle="dropdown" href="@nav.NavItem.NavgiationItemUrl">@nav.NavItem.NavigationItemName</a>
                        <ul class="dropdown-menu">
                            @foreach (var subnav in nav.SubNavigations)
                            {
                            <li><a class="dropdown-item" href="@subnav.NavgiationItemUrl">@subnav.NavigationItemName</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>